@model IEnumerable<Profile.Models.Entities.User>

@{
    ViewData["Title"] = "UserList";
}

@{
    var i = 1;
}

<style>
    .table tbody tr:hover td {
        color: #535353;
    }
</style>

<!-- Hoverable rows start -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <a href="/User/CreateUser" class="btn btn-primary col-md-2">Create New User</a>
                    
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Time Created</th>
                                    <th>Info</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Age</td>
                                        <td>@user.Gender.DisplayName()</td>
                                        <td>@user.TimeCreated</td>
                                        <td>
                                            <a href="/User/EditUser/@user.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <a href="/User/DeleteUser/@user.UserId" class="btn btn-sm btn-outline-danger">Delete</a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
